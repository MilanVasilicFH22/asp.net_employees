@model IEnumerable<EmployeeManagement.Models.Employee>

<h2>Employee List</h2>

<p>
    <a asp-action="Create">Create New Employee</a>
</p>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Prename</th>
            <th>Lastname</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.ID</td>
                <td>@employee.Prename</td>
                <td>@employee.Lastname</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@employee.ID" />
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this employee?');" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
